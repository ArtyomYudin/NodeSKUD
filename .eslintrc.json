{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["import", "prettier"],
  "rules": {
    // "indent": ["error", 4],
    "prettier/prettier": ["error"],
    "import/prefer-default-export": "off",
    // "import/extensions": ["error", { "ts": "never", "js": "never" }],
    "import/no-unresolved": "off",
    "no-useless-constructor": "off",
    "no-await-in-loop": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "log",
          "warn",
          "dir",
          "timeLog",
          "assert",
          "clear",
          "count",
          "countReset",
          "group",
          "groupEnd",
          "table",
          "dirxml",
          "error",
          "groupCollapsed",
          "Console",
          "profile",
          "profileEnd",
          "timeStamp",
          "context"
        ]
      }
    ],
    "no-debugger": "error",
    "max-len": [
      "error",
      {
        "code": 140,
        "ignoreComments": true,
        "tabWidth": 4
      }
    ]
  }
}
